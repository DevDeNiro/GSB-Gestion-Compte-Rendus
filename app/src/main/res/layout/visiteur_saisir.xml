<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.GSBdoctors.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

            <Button
                android:id="@+id/bouton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_700"
                android:gravity="center"
                android:text="Saisir"/>

                <Button
                    android:id="@+id/bouton2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Accueil"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/bouton3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Consulter"/>
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/titre"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/ic_title"
                    android:hint="Titre"
                    android:inputType=""
                    android:minHeight="48dp" />


                <EditText
                    android:id="@+id/medicament"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/medoc"
                    android:hint="Médicaments adminitrés"
                    android:inputType=""
                    android:minHeight="48dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/duree"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/sablier"
                    android:hint="Durée de visite (en minute)"
                    android:inputType="number"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/rdv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/rdv"
                    android:hint="Prochain rendez-vous"
                    android:inputType="date"
                    android:minHeight="48dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/ante"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/ante"
                    android:hint="Antécédants médicaux"
                    android:inputType=""
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/prix"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:drawableRight="@drawable/ic_euro"
                    android:hint="Prix total"
                    android:inputType="number"
                    android:minHeight="48dp" />

            </LinearLayout>
        </LinearLayout>

            <Button
                android:id="@+id/enregistrer"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="500dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:text="Enregistrer" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
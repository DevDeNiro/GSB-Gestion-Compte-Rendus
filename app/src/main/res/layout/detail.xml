<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="58dp">

                    <Button
                        android:id="@+id/bouton1"
                        android:text="Saisir"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginStart="5dp"/>

                    <Button
                        android:id="@+id/bouton2"
                        android:text="Accueil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginHorizontal="5dp"/>

                    <Button
                        android:id="@+id/bouton3"
                        android:text="Consulter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/teal_700"/>
                 </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/prenom"
                        android:text="Prénom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/nom"
                        android:text="Nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>
                
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:drawableRight="@drawable/cake"
                            android:hint="Date de naissance"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/naiss"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:drawableRight="@drawable/house"
                            android:hint="adresse"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/adresse"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:drawableRight="@drawable/phone"
                                android:hint="Téléphone"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/titre"
                                android:layout_width="150dp"
                                android:layout_height="40dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="150dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:drawableRight="@drawable/email"
                                android:hint="E-mail"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/age"
                                android:layout_width="150dp"
                                android:layout_height="40dp"/>

                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:drawableRight="@drawable/ante"
                            android:hint="Antécédants médicaux"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/ante"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:drawableRight="@drawable/medoc"
                            android:hint="Médicaments adminitrés"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/medicament"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:drawableRight="@drawable/sablier"
                            android:hint="Durée de la visite"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/temps"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:drawableRight="@drawable/rdv"
                            android:hint="Prochain rendez-vous"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/rdv"
                            android:layout_width="150dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>